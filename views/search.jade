extends layout

block content

  if searchResults.length === 0
    p.weak= "No exact matches for " + q + "."

  else
    ul.results
      for word,i in searchResults
        li
          a(href="/search?q="+word)= word


  if reverseSearchResults.length > 0
    h2 See Also:

    ul.results
      for word,i in reverseSearchResults
        li
          a(href="/search?q="+word)= word
